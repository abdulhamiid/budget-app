<%= render "devise/shared/error_messages", resource: resource %>
<div class="container mt-3">
  <%= image_tag "businesswoman-speaking.avif", class: "showcase-img" %>
  <h2 class="text-start fw-bolder">Sign up</h2>
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.email_field :email, label_as_placeholder: true, autofocus: true, autocomplete: "email" %>
    <%= f.text_field :name, autocomplete: "name", label_as_placeholder: true, placeholder: "Full name" %>
    <%= f.password_field :password, label_as_placeholder: true, help: 'At least six characters long' %>
    <%= f.password_field :password_confirmation, label_as_placeholder: true, autocomplete: "new-password" %>
    <div class="actions">
      <%= f.submit "Continue", class: "btn btn-primary col-12 mb-2" %>
    </div>
    <p class="text-center mt-3"><span class="text-secondary">Already have an account? </span class=""><%= link_to "Log in", new_session_path(resource_name), class: "text-primary fw-bold text-decoration-none" %></p>
  <% end %>
  <p style="color: green">
</div>
