<div class="container lh-lg">
  <h2 class="my-4 text-center">Log in</h2>
  <div class="imgcontainer">
     <img src="https://www.w3schools.com/howto/img_avatar2.png" alt="Avatar" class="avatar">
  </div>

  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, label_as_placeholder: true, autofocus: true, autocomplete: "email" %>
    <%= f.password_field :password, label_as_placeholder: true, autocomplete: "email" %>
    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-success col-12 mb-3" %>
    </div>
    <div class="d-flex justify-content-between"">
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
      <% end %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "fs-6" %>
      <% end %>
    </div>
    <p><span class="ash">Not a member?</span> <%= link_to "Create Account", new_registration_path(resource_name) %> </p>

  <% end %>
</div>
