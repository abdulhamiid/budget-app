<div id="mcv">
  <ul class="list-inline mb-2 bg-primary text-white d-flex align-items-center justify-content-between p-3">
    <li class="list-inline-item"><%= link_to root_path do %>
      <i id="menu" class="bi bi-list fs-3 text-white"></i>
      <% end %> 
    </li>
    <li class="list-inline-item">Category</li>
    <li class="list-inline-item"><i class="bi bi-search fs-5"></i></li> 
  </ul>   

  <div>
    <div id="groups" class="container" %>
      <% @groups.each do |group| %>
        <%= link_to group, class: "text-decoration-none text-secondary" do %>
          <%= render group %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="p-3 mt-5 bg-success">
    <%= link_to "ADD NEW CATEGORY", new_group_path, class: "d-block p-3 bg-success text-white text-white text-decoration-none text-center border border-white rounded-1" %>
  </div>
</div>
