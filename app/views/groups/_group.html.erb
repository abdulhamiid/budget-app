<div id="<%= dom_id group %>" class="d-flex justify-content-between my-3 p-2 border border-light border-2 shadow-sm bg-body">
  <div class="d-flex justify-content-center align-items-center">
   <% if group.icon.attached? %>
      <%= image_tag group.icon, style: "width: 70px; height: 70px" %>
    <% end %>
    <div class="mx-3">
      <h6><%= group.name %></h6>
      <p><%= group.created_at.strftime("%Y-%m-%d") %></p>
    </div>
  </div>
  <div>
    <p>$ <%= group.entities.sum('amount') %></p>
  </div>
</div>
